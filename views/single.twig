{% extends "base.twig" %}

{% block content %}

<div class="container pt-3">
	<div class="row">
		<div class="col-sm-8">
			<h1 class="display-4">{{post.title}}</h1>
			<p class="post-meta">Posted on {{post.date | date}} by {{ post.author.name }} | {{ post.terms('category') | join(', ') }}</p>
			{% if post.get_thumbnail %}
			<img src="{{post.thumbnail.src}}" class="img-fluid mb-2" alt="{{post.title}}">
			{% endif %}
			<article>
				{{post.content}}
			</article>
		</div>
		<aside class="col-sm-4">
			{% include 'sidebar.twig' %}
		</aside>
	</div>
</div>
{% endblock %}
 