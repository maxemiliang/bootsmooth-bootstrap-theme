{% extends "base.twig" %}

{% block content %}
<div class="container pt-3">
    <div class="row">
        <div class="col-sm-8">
            {% if title %}
            <h1><span>{{title}}</span></h1>
            {% endif %}
            {% if posts %}
            {% for post in posts %}
            <h3><a href="{{post.link}}">{{post.title}}</a></h3>
			<div class="h6">Posted on {{post.date | date}} by {{ post.author.name }} | {{ post.terms('category') | join(', ') }}</div>
			<p class="card-text">			
				{{post.post_content|excerpt(40)}}...
			</p>
			<p>
				<a class="btn btn-outline-primary" href="{{post.link}}">Read</a>
			</p>
            {% endfor %}
            {% else %}
            <p>No results found.</p>
            {% endif %}
            {% include 'pagination.twig' %}
        </div>
        <aside class="col-sm-4">
            {% include 'sidebar.twig' %}
        </aside>
    </div>
</div>
{% endblock %}