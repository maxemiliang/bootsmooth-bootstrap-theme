{% extends "base.twig" %}

{% block content %}
<div class="container pt-3">
    <div class="row">
        <div class="col-sm-8">
            {% if title %}
            <h1 class="uk-article-title"><span>{{title}}</span></h1>
            {% endif %}
            {% if posts %}
            {% for post in posts %}
            	{% include 'tease-article.twig' %}
            {% endfor %}
            {% else %}
            <p>No results found.</p>
            {% endif %}
            {% include 'pagination.twig' %}
        </div>
        <aside class="col-sm-4">
            {% include 'sidebar.twig' %}
        </aside>
    </div>
</div>
{% endblock %}